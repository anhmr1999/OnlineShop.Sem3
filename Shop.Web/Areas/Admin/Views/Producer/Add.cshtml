@model Shop.EntityFramework.Entities.Producer
@{
    ViewBag.Title = "Add";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Admin</a></li>
        <li class="breadcrumb-item active" aria-current="page"><a href="@Url.Action("Index","Producer")">Producer</a></li>
        <li class="breadcrumb-item active" aria-current="page">Add</li>
    </ol>
</nav>
<div class="card card-primary">
    <!-- /.card-header -->
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <form method="post">
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label>Code <span style="color: red">*</span></label>
                                <input type="text" class="form-control" placeholder="Enter Code" name="code" required value="@Model.Code">
                                @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <!-- text input -->
                            <div class="form-group">
                                <label>Name <span style="color: red">*</span></label>
                                <input type="text" class="form-control" placeholder="Enter Name" name="name" required value="@Model.Name">
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <!-- text input -->
                            <div class="form-group">
                                <label>Founding date <span style="color: red">*</span></label>
                                <input type="date" class="form-control" name="foundingDate" value="@(Model.FoundingDate?.ToString("yyyy-MM-dd"))">
                                @Html.ValidationMessageFor(model => model.FoundingDate, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <!-- textarea -->
                            <div class="form-group">
                                <label>Introduce <span style="color: red">*</span></label>
                                <textarea class="form-control" rows="3" placeholder="Enter ..." name="introduce">@Model.Introduce</textarea>
                                @Html.ValidationMessageFor(model => model.Introduce, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                            </div>
                            <input name="FoundingDate" type="date" class="form-control" data-inputmask-alias="datetime" data-inputmask-inputformat="dd/mm/yyyy" data-mask>
                        </div>
                        <div>
                            <div class="col-sm-12 text-right">
                                <a class="btn btn-outline-danger" href="@Url.Action("Index", "Supplier")">Back to list</a>
                                <button class="btn btn-outline-primary">Save</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- /.card-body -->
</div>

