<!-- top-rated-movie -->
<section class="top-rated-movie tr-movie-bg" data-background="/assets/img/bg/tr_movies_bg.jpg">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="section-title text-center mb-50">
                    <span class="sub-title">ONLINE STREAMING</span>
                    <h2 class="title">Top Rated Music</h2>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">

        </div>
        <div class="row tr-movie-active">
            @foreach (var item in songLst)
            {
                <div class="col-xl-3 col-lg-4 col-sm-6 grid-item grid-sizer cat-one cat-three">
                    <div class="movie-item mb-60">
                        <div class="movie-poster">
                            <a href="@Url.Action("View", "Music", new {code = item.Code})"><img src="@item.Image" alt=""></a>
                        </div>
                        <div class="movie-content">
                            <div class="top">
                                <h5 class="title"><a href="@Url.Action("View", "Music", new {code = item.Code})">@item.Name</a></h5>
                            </div>
                            <div class="bottom">
                                <ul>
                                    <li>
                                        <span class="date" style="color: #e4d804; font-size: 14px; ">
                                            <i class="far fa-clock"></i>@(item.ManufactureDate?.ToString("dd/MM/yyyy"))
                                        </span>
                                    </li>
                                    <li>
                                        <span class="duration">@(item.Category?.Name)</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- top-rated-movie-end -->