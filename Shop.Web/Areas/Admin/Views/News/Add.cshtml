@using Shop.EntityFramework.Entities
@model News
@{
    ViewBag.Title = "Add";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Admin</a></li>
        <li class="breadcrumb-item active" aria-current="page"><a href="@Url.Action("Index","News")">News</a></li>
        <li class="breadcrumb-item active" aria-current="page">Add</li>
    </ol>
</nav>
<div class="card card-primary">
    <!-- /.card-header -->
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <form method="post">
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label>Code <span style="color: red">*</span></label>
                                <input type="text" class="form-control" placeholder="Enter Code" name="code" required value="@Model.Code">
                                @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <!-- text input -->
                            <div class="form-group">
                                <label>Name <span style="color: red">*</span></label>
                                <input type="text" class="form-control" placeholder="Enter Name" name="name" required value="@Model.Name">
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <!-- textarea -->
                            <div class="form-group">
                                <label>Sort Description</label>
                                <input class="form-control" rows="3" placeholder="Enter ..." name="shortDesciption" value="@Model.ShortDesciption">
                                @Html.ValidationMessageFor(model => model.ShortDesciption, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <!-- textarea -->
                            <div class="form-group">
                                <label>Description</label>
                                <textarea class="form-control" id="summernote" rows="3" placeholder="Enter ..." name="description" value="true">@(Model.Description)</textarea>
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Is Global</label>
                                <div><input type="checkbox" name="my-checkbox" checked data-bootstrap-switch value="true" @(Model.IsGlobal ? "checked" : "")></div>
                            </div>
                        </div>

                    </div>
                    <div class="col-sm-12">
                        <div>
                            <label for="file">Choose Image</label>
                        </div>
                        <input id="file" type="file" value="@Model.Image" />
                        @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                    </div>

                    <div>
                        <div class="col-sm-12 text-right">
                            <a class="btn btn-outline-danger" href="@Url.Action("Index", "Category")">Back to list</a>
                            <button class="btn btn-outline-primary">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- /.card-body -->
</div>

@section Styles{
    <!-- Select2 -->
    <link rel="stylesheet" href="/assets/manager/plugins/select2/css/select2.min.css">
    <link rel="stylesheet" href="/assets/manager/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css">
    <!-- summernote -->
    <link rel="stylesheet" href="/assets/manager/plugins/summernote/summernote-bs4.min.css">
}

@section Scripts{
    <!-- Select2 -->
    <script src="/assets/manager/plugins/select2/js/select2.full.min.js"></script>
    <!-- InputMask -->
    <script src="/assets/manager/plugins/moment/moment.min.js"></script>
    <script src="/assets/manager/plugins/inputmask/jquery.inputmask.min.js"></script>
    <!-- Summernote -->
    <script src="/assets/manager/plugins/summernote/summernote-bs4.min.js"></script>

    <script>
        $(function () {
            //Initialize Select2 Elements
            $('.select2').select2();

            //Datemask dd/mm/yyyy
            $('.datemask').inputmask('dd/mm/yyyy', { 'placeholder': 'dd/mm/yyyy' });

            $('#summernote').summernote({ height: 200, });
        })
    </script>
}