@using Shop.EntityFramework.Entities
@using Shop.Web.Common.PageFilter
@model ViewDetailt<SongOrTrailerOrGame>
@{
    ViewBag.Title = "View";
}
<section class="movie-details-area" data-background="/assets/img/bg/movie_details_bg.jpg">
    <div class="container">
        <div class="row align-items-center position-relative">
            <div class="col-xl-5 col-lg-5">
                <div class="movie-details-img">
                    <img src="@Model.Data.Image" alt="" style="width: 100%; height: auto">
                    <a href="@Model.Data.Link" class="popup-video"><img src="~/assets/img/images/play_icon.png" alt=""></a>
                </div>
            </div>
            <div class="col-xl-5 col-lg-5">
                <div class="movie-details-content">
                    <h5>New Song</h5>
                    <h2>@Model.Data.Name</h2>
                    <div class="banner-meta">
                        <ul>
                            <li class="quality">
                                <span>Pg 18</span>
                                <span>hd</span>
                            </li>
                            <li class="category">
                                <a href="#">@Model.Data.Category.Name</a>
                            </li>
                            <li class="release-time">
                                <span><i class="far fa-clock"></i> @(Model.Data.ManufactureDate?.ToString("dd/MM/yyyy"))</span>
                            </li>
                        </ul>
                    </div>
                    <div class="banner-meta">
                        <ul>
                            <li class="category">
                                @foreach (var item in Model.Data.ActorOrSingers)
                                {
                                    <a href="#">@item.Singer.Title @item.Singer.Name</a>
                                }
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            @if (Model.Data.AllowDownloadFree)
            {
                <div class="movie-details-btn">
                    <a href="img/poster/movie_details_img.jpg" class="download-btn" download="">Download <img src="fonts/download.svg" alt=""></a>
                </div>
            }
        </div>
    </div>
</section>

<section class="episode-area episode-bg" data-background="/assets/img/bg/episode_bg.jpg">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="movie-history-wrap">
                    <h3 class="title">About <span>@Model.Data.Name</span></h3>
                    <p>
                        @Html.Raw(Model.Data.Description)
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="tv-series-area tv-series-bg" data-background="/assets/img/bg/tv_series_bg02.jpg">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="section-title text-center mb-50">
                    <span class="sub-title">Best TV Series</span>
                    <h2 class="title">World Best TV Series</h2>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            @foreach (var item in Model.LikeData)
            {
                <div class="col-xl-3 col-lg-4 col-sm-6 grid-item grid-sizer cat-one cat-three">
                    <div class="movie-item mb-60">
                        <div class="movie-poster">
                            <a href="@Url.Action("View", "Game", new {code = item.Code})"><img src="@item.Image" alt=""></a>
                        </div>
                        <div class="movie-content">
                            <div class="top">
                                <h5 class="title"><a href="movie-details.html">@item.Name</a></h5>
                            </div>
                            <div class="bottom">
                                <ul>
                                    <li>
                                        <span class="date" style="color: #e4d804; font-size: 14px; ">
                                            <i class="far fa-clock"></i>@(item.ManufactureDate?.ToString("dd/MM/yyyy"))
                                        </span>
                                    </li>
                                    <li>
                                        <span class="duration">@(item.Category?.Name)</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>