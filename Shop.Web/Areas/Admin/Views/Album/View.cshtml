@model Shop.EntityFramework.Entities.Album
@{
    ViewBag.Title = "View";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index","")">Admin</a></li>
        <li class="breadcrumb-item active" aria-current="page"><a href="@Url.Action("Index","album")">Album</a></li>
        <li class="breadcrumb-item active" aria-current="page">View</li>
    </ol>
</nav>
<div class="card card-primary">
    <!-- /.card-header -->
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group row">
                    <label class="col-3">Code</label>
                    <div class="col-9">@Model.Code</div>
                </div>
                <div class="form-group row">
                    <label class="col-3">Name</label>
                    <div class="col-9">@Model.Name</div>
                </div>
                <div class="form-group row">
                    <label class="col-3">Release Date</label>
                    <div class="col-9">@(Model.ReleaseDate.HasValue ? Model.ReleaseDate.Value.ToString("dd/MM/yyyy") : "")</div>
                </div>
                <div class="form-group row">
                    <label class="col-3">List Music</label>
                    <div class="col-9">
                        <ul>
                            @foreach (var item in Model.Songs)
                            {
                                <li>
                                    <a href="@Url.Action("View", "Song", new {id = item.SongId})">
                                        @item.Song.Name
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-3">Description</label>
                    <div class="col-9">@Html.Raw(Model.Description)</div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.card-body -->
</div>