@using Shop.Web.Common
@using Shop.EntityFramework.Entities
@model CommonListResult<Album>
@{
    ViewBag.Title = "Album";
    var index = (Model.Filter.PageIndex - 1) * 10 + 1;
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index","")">Admin</a></li>
        <li class="breadcrumb-item active" aria-current="page">Album</li>
    </ol>
</nav>
<!-- table -->
<section class="card p-2">
    <form method="get">
        <input type="hidden" name="pageIndex" value="" />
        <div class="row">
            <div class="col-md-3 form-group">
                <input class="form-control" name="searchKey" placeholder="Search key..." value="" />
            </div>
            <div class="col-md-3 form-group">
                <button type="submit" class="btn btn-outline-primary">Search</button>
            </div>
            <div class="col-md-3 text-right">
                <a href="@Url.Action("Add", "Album")" class="btn btn-outline-danger">New Album</a>
            </div>
        </div>
    </form>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">STT</th>
                <th scope="col">Code</th>
                <th scope="col">Name</th>
                <th scope="col">Realease Date</th>
                <th scope="col">Description</th>
                <th style="width:220px" class="text-center">Action</th>
            </tr>
        </thead>
        <tbody>
            
            @foreach (var item in Model.List)
            {
                <tr>
                    <th scope="row">@index</th>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td>@(item.ReleaseDate.HasValue ? item.ReleaseDate.Value.ToString("dd/MM/yyyy") : "Chưa rõ")</td>
                    <td>@item.Description</td>
                    <td class="text-center">
                        <a href="@Url.Action("View", "Album", new {id = item.Id})" class="btn btn-outline-success" data-toggle="modal" data-target="#exampleModalCenter">View</a>
                        <a href="@Url.Action("Edit", "Album", new {id = item.Id})" class="btn btn-outline-primary">Edit</a>
                        <a href="@Url.Action("Edit", "Album", new {id = item.Id})" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
                index++;
            }
        </tbody>
    </table>
    <nav aria-label="Page navigation example right ">
        <ul class="pagination justify-content-end">
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1">Previous</a>
            </li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
                <a class="page-link" href="#">Next</a>
            </li>
        </ul>
    </nav>
</section>