@model Shop.EntityFramework.Entities.ActorOrSinger
@{
    ViewBag.Title = "Add";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index","")">Admin</a></li>
        <li class="breadcrumb-item active" aria-current="page"><a href="@Url.Action("Index","ActorOrSinger")">ActorOrSinger</a></li>
        <li class="breadcrumb-item active" aria-current="page">Add</li>
    </ol>
</nav>
<div class="card card-primary">
    <!-- /.card-header -->
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <form method="post">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label>Code <span style="color: red">*</span></label>
                        <input type="text" class="form-control" placeholder="Enter Code" name="code" value="@Model.Code" required>
                        @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Name <span style="color: red">*</span></label>
                        <input type="text" class="form-control" placeholder="Enter Name" name="Name" value="@Model.Name" required>
                        @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Date of birth:</label>

                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                            </div>
                            <input type="date" class="form-control" data-inputmask-alias="datetime" data-inputmask-inputformat="dd/mm/yyyy" data-mask name="dob">
                        </div>
                        <!-- /.input group -->
                    </div>
                    <div class="form-group">
                        <label>Title <span style="color: red">*</span></label>
                        <input type="text" class="form-control" placeholder="Enter Name" name="title" value="@Model.Title" required>
                        @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                    </div>
                    <!-- textarea -->
                    <div class="form-group">
                        <label>Description</label>
                        <textarea class="form-control" rows="3" placeholder="Enter ..." name="description">@Model.Description</textarea>
                    </div>
                    <div class="text-right">
                        <a class="btn btn-outline-danger" href="@Url.Action("Index")">Back to list</a>
                        <button class="btn btn-outline-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- /.card-body -->
</div>

